root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 180

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml,json,toml,ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.rs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
indent_size = 2
trim_trailing_whitespace = true
